<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.assesment.cinemaslist.ui.cinema.list.CinemaListFragment"
        android:label="fragment_movie_list"
        tools:layout="@layout/fragment_cinema_list" >
        <action
            android:id="@+id/action_movieListFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.assesment.cinemaslist.ui.cinema.details.CinemaDetailsFragment"
        android:label="fragment_movie_details"
        tools:layout="@layout/fragment_cinema_details" >

        <argument
            android:name="movie_id"
            app:argType="integer" />
    </fragment>
</navigation>